{
  "name": "blog",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run wrangler dev & bun run dev:css & bun run dev:js",
    "dev:css": "postcss styles/index.css -o dist/css/index.css --map --watch",
    "dev:js": "bun build src/js/script.ts --outdir dist --minify --watch",
    "build": "bun run build:css && bun run build:js",
    "build:css": "NODE_ENV=production postcss styles/index.css -o dist/css/index.css",
    "build:js": "bun build src/js/script.ts --outdir dist --minify",
    "deploy": "bun run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./types/worker.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.11.1",
    "marked": "^16.4.2",
    "marked-highlight": "^2.2.3",
    "postcss": "^8.5.6",
    "sanitize-html": "^2.17.0",
    "sugar-high": "^0.9.5",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "@types/sanitize-html": "^2.16.0",
    "autoprefixer": "^10.4.23",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "postcss-cli": "^11.0.1",
    "wrangler": "^4.56.0"
  }
}
